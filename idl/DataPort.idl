#ifndef DataInPort_idl
#define DataInPort_idl

module OpenRTM
{
  enum PortStatus
  {
    PORT_OK,
    PORT_ERROR,
    BUFFER_FULL,
    BUFFER_EMPTY,
    BUFFER_TIMEOUT,
    UNKNOWN_ERROR
  };

  typedef sequence<octet> CdrData;

  interface InPortCdr
  {
    PortStatus put(in CdrData data);
  };

  interface OutPortCdr
  {
    PortStatus get(out CdrData data);
  };
};
#endif
